@model SearchBindingModel
@{
    ViewBag.Title = "Home";
}

<div class="row">
    @using (Html.BeginForm("Search", "Movies"))
    {
        <div class="input-group">
            @Html.TextBoxFor(model => model.SearchText, htmlAttributes: new { @class = "form-control", placeholder = "Search for movies..." })
            <div class="input-group-btn">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    }
</div>